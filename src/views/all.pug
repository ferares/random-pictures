extends layouts/default.pug

block content
  div.container.my-4
    div.row
      each picture in pictures
        div.col-md-4.mt-4
          div.card
            img.card-img-top(src=picture.url)
            div.card-body
              ul.list-group.list-group-flush
                li.list-group-item
                  b Ubicaci√≥n:
                  |  #{picture.location}
                  if picture.author
                    if picture.author.name
                      li.list-group-item
                        b Usuario:
                        |  #{picture.author.name}
                    if picture.author.link
                      li.list-group-item
                        b Enlace:
                        a(href=picture.author.link target='_blank' rel='noreferrer')
                          |  #{picture.author.link}
